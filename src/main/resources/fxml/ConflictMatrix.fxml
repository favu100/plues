<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>

<fx:root prefWidth="800.0" prefHeight="500.0" alignment="center" type="javafx.scene.layout.GridPane"
         hgap="10.0" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="lbHeader" text="%header"
               GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER"
               GridPane.columnSpan="2" GridPane.valignment="CENTER"/>
        <Label fx:id="lbCombinableCourses" text="%headCombinable" GridPane.columnIndex="0"
               GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        <Label fx:id="lbStandaloneCourses" text="%headStandalone" GridPane.columnIndex="1"
               GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        <ScrollPane fx:id="scrollPaneCombinable" prefWidth="Infinity" prefHeight="Infinity"
                    GridPane.columnIndex="0" GridPane.rowIndex="2">
            <GridPane fx:id="gridPaneCombinable"/>
        </ScrollPane>
        <ScrollPane fx:id="scrollPaneStandalone" prefWidth="Infinity" prefHeight="Infinity"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="2">
            <GridPane fx:id="gridPaneStandalone"/>
        </ScrollPane>
        <HBox fx:id="boxLegend" GridPane.columnIndex="0" GridPane.rowIndex="4"
              GridPane.columnSpan="2" spacing="10.0">
            <Pane fx:id="paneLegendSuccess" maxWidth="25.0" maxHeight="25.0" minWidth="25.0"
                  minHeight="25.0"/>
            <Label fx:id="lbLegendSuccess" text="%legendSuccess" wrapText="true"/>
            <Pane fx:id="paneLegendFailure" maxWidth="25.0" maxHeight="25.0" minWidth="25.0"
                  minHeight="25.0"/>
            <Label fx:id="lbLegendFailure" text="%legendFailure" wrapText="true"/>
            <Pane fx:id="paneLegendInfeasible" maxWidth="25.0" maxHeight="25.0" minWidth="25.0"
                  minHeight="25.0"/>
            <Label fx:id="lbLegendInfeasible" text="%legendInfeasible" wrapText="true"/>
            <Pane fx:id="paneLegendImpossible" maxWidth="25.0" maxHeight="25.0" minWidth="25.0"
                  minHeight="25.0"/>
            <Label fx:id="lbLegendImpossible" text="%legendImpossible" wrapText="true"/>
        </HBox>
        <HBox prefHeight="Infinity" prefWidth="Infinity" alignment="CENTER"
              GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">
            <Button fx:id="btCheckAll" onAction="#checkAllCombinations"
                    text="%checkAll"/>
            <Button fx:id="btCancelCheckAll" onAction="#cancelCheckAll" text="%cancelCheckAll"/>
        </HBox>
    </children>
    <columnConstraints>
        <ColumnConstraints percentWidth="40.0"/>
        <ColumnConstraints percentWidth="40.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="5.0"/>
        <RowConstraints percentHeight="5.0"/>
        <RowConstraints percentHeight="70.0"/>
        <RowConstraints percentHeight="5.0"/>
        <RowConstraints percentHeight="5.0"/>
        <RowConstraints percentHeight="5.0"/>
        <RowConstraints percentHeight="5.0"/>
    </rowConstraints>
</fx:root>
