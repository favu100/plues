<?xml version="1.0" encoding="UTF-8"?>

<?import de.hhu.stups.plues.ui.components.MajorMinorCourseSelection?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>

<fx:root alignment="center" type="javafx.scene.layout.GridPane"
         xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <MajorMinorCourseSelection fx:id="courseSelection" GridPane.columnIndex="0"
                                   GridPane.halignment="CENTER" GridPane.rowIndex="0"
                                   GridPane.columnSpan="2"/>
        <Button fx:id="btChoose" onAction="#btChoosePressed" prefWidth="300" maxHeight="10000.0"
                text="Choose Modules / Units" GridPane.halignment="CENTER" GridPane.columnIndex="0"
                GridPane.rowIndex="1" GridPane.columnSpan="2"/>
        <ScrollPane fx:id="scrollPane" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2"
                    maxHeight="10000.0" maxWidth="10000.0">
            <VBox fx:id="modulesUnits" spacing="25"/>
        </ScrollPane>
        <Button fx:id="btCheck" onAction="#btCheckPressed" prefWidth="300" maxHeight="10000.0"
                text="Check" GridPane.halignment="CENTER" GridPane.columnIndex="0"
                GridPane.rowIndex="3" GridPane.columnSpan="2"/>
        <Label fx:id="icon" GridPane.rowIndex="4" GridPane.columnIndex="0"
               prefWidth="300" alignment="CENTER"/>
        <VBox fx:id="buttons" GridPane.columnIndex="1" GridPane.rowIndex="4"
                  prefWidth="100">
            <Button fx:id="show" text="Show" onMouseClicked="#showPdf" prefWidth="100"/>
            <Button fx:id="save" text="Save" onMouseClicked="#savePdf" prefWidth="100"/>
        </VBox>
    </children>
    <columnConstraints>
        <ColumnConstraints percentWidth="30.0"/>
        <ColumnConstraints percentWidth="30.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="15.0"/>
        <RowConstraints percentHeight="5.0"/>
        <RowConstraints percentHeight="60.0"/>
    </rowConstraints>
</fx:root>
