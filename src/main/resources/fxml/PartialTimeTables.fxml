<?xml version="1.0" encoding="UTF-8"?>

<?import de.hhu.stups.plues.ui.components.MajorMinorCourseSelection?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ProgressIndicator?>

<fx:root alignment="center" type="GridPane" vgap="10.0" styleClass="windowPadding"
         xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints percentWidth="80.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="10.0"/>
        <RowConstraints percentHeight="5.0"/>
        <RowConstraints percentHeight="80.0"/>
        <RowConstraints percentHeight="5.0"/>
    </rowConstraints>
    <MajorMinorCourseSelection fx:id="courseSelection" GridPane.columnIndex="0"
                               GridPane.halignment="CENTER" GridPane.rowIndex="0"/>
    <Button fx:id="btChoose" onAction="#btChoosePressed" prefWidth="300" text="%choose"
            GridPane.halignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1"
            defaultButton="true"/>
    <ScrollPane fx:id="scrollPane" styleClass="windowPadding" GridPane.columnIndex="0"
                GridPane.rowIndex="2" visible="false" maxHeight="Infinity" maxWidth="Infinity">
        <VBox fx:id="modulesUnits" spacing="25"/>
    </ScrollPane>
    <HBox fx:id="buttonBox" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="3"
          alignment="CENTER">
        <Button fx:id="btCheck" onAction="#btCheckPressed" text="%check" visible="false"/>
        <Button fx:id="btShow" text="%show" onMouseClicked="#showPdf"/>
        <Button fx:id="btSave" text="%saveAs" onMouseClicked="#savePdf"/>
        <StackPane>
            <ProgressIndicator fx:id="progressIndicator" prefWidth="25.0" prefHeight="25.0"
                               visible="false"/>
            <Label fx:id="lbIcon"/>
        </StackPane>
    </HBox>
</fx:root>
