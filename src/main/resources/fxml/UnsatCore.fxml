<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import de.hhu.stups.plues.ui.components.CombinationOrSingleCourseSelection?>
<fx:root prefHeight="600.0" prefWidth="700.0" type="VBox"
         xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1">
    <ScrollPane fitToHeight="true" fitToWidth="true">
        <VBox>
            <Label text="%unsatCore">
                <font>
                    <Font size="30.0"/>
                </font>
            </Label>
            <CombinationOrSingleCourseSelection fx:id="courseSelection"/>
            <HBox>
                <Button fx:id="unsatCoreModulesButton" disable="true"
                        onAction="#computeUnsatCoreModules"
                        text="%unsatCoreModulesButton"/>
                <Label fx:id="modulesTaskStateIcon"/>
                <Label fx:id="modulesTaskStateLabel"/>
            </HBox>
            <VBox fx:id="modulesPane" visible="false">
                <Separator prefWidth="200.0"/>
                <Label text="%modulesPaneTitle"/>
                <TableView fx:id="modulesTable" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="modulePordnrColumn" minWidth="50" prefWidth="100"
                                     text="%modulePordnrColumn"/>
                        <TableColumn fx:id="moduleNameColumn" minWidth="200"
                                     text="%moduleNameColumn"/>
                    </columns>
                </TableView>
                <HBox>
                    <Button fx:id="unsatCoreAbstractUnitsButton" disable="true"
                            onAction="#computeUnsatCoreAbstractUnits"
                            text="%unsatCoreAbstractUnitsButton"/>
                    <Label fx:id="abstractUnitsTaskStateIcon"/>
                    <Label fx:id="abstractUnitsTaskStateLabel"/>
                </HBox>
            </VBox>
            <VBox fx:id="abstractUnitsPane" visible="false">
                <Separator prefWidth="200.0"/>

                <Label text="%abstractUnitsPaneTitle"/>
                <TableView fx:id="abstractUnitsTable" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="abstractUnitKeyColumn" minWidth="50" prefWidth="100"
                                     text="%abstractUnitKeyColumn"/>
                        <TableColumn fx:id="abstractUnitTitleColumn" minWidth="200"
                                     text="%abstractUnitTitleColumn"/>
                        <TableColumn fx:id="abstractUnitModuleSemester" minWidth="200"
                                     text="%abstractUnitModuleSemester"/>
                    </columns>
                </TableView>
                <HBox>
                    <Button fx:id="unsatCoreGroupsButton" disable="true"
                            onAction="#computeUnsatCoreGroups"
                            text="%unsatCoreGroupsButton"/>
                    <Label fx:id="groupsTaskStateIcon"/>
                    <Label fx:id="groupsTaskStateLabel"/>
                </HBox>
            </VBox>
            <VBox fx:id="groupsPane" visible="false">
                <Separator prefWidth="200.0"/>
                <Label text="%groupsPaneTitle"/>
                <TableView fx:id="groupsTable" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="groupUnitKeyColumn" minWidth="50" prefWidth="100"
                                     text="%groupUnitKeyColumn"/>
                        <TableColumn fx:id="groupUnitTitleColumn" minWidth="200"
                                     text="%groupUnitTitleColumn"/>
                        <TableColumn fx:id="groupUnitSemestersColumn" minWidth="200"
                                     text="%groupUnitSemestersColumn"/>
                        <TableColumn fx:id="groupSessionsColumn" minWidth="200"
                                     text="%groupSessionsColumn"/>
                        <TableColumn fx:id="groupAbstractUnits" minWidth="200"
                                     text="%groupAbstractUnits"/>
                    </columns>
                </TableView>
                <HBox>
                    <Button fx:id="unsatCoreSessionButton" disable="true"
                            onAction="#computeUnsatCoreSessions"
                            text="%unsatCoreSessionButton"/>
                    <Label fx:id="sessionsTaskStateIcon"/>
                    <Label fx:id="sessionsTaskStateLabel"/>
                </HBox>
            </VBox>
            <VBox fx:id="sessionsPane" visible="false">
                <Separator prefWidth="200.0"/>
                <Label text="%sessionsPaneTitle"/>
                <TableView fx:id="sessionsTable" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="sessionDayColumn" minWidth="50" prefWidth="100"
                                     text="%sessionDayColumn"/>
                        <TableColumn fx:id="sessionTimeColumn" minWidth="200"
                                     text="%sessionTimeColumn"/>
                        <TableColumn fx:id="sessionUnitKeyColumn" minWidth="50" prefWidth="100"
                                     text="%sessionUnitKeyColumn"/>
                        <TableColumn fx:id="sessionUnitTitleColumn" minWidth="200"
                                     text="%sessionUnitTitleColumn"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </ScrollPane>
</fx:root>
