<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER_LEFT">
        <Label fx:id="searchSymbol" alignment="CENTER" textAlignment="CENTER" HBox.hgrow="ALWAYS">
         <padding>
            <Insets right="5.0" />
         </padding></Label>
        <TextField fx:id="txtQuery" promptText="%searchAbstractUnit" HBox.hgrow="ALWAYS" />
        <Button fx:id="btClearSelection" onAction="#resetSelection" HBox.hgrow="ALWAYS">
            <tooltip>
                <Tooltip text="%clear" />
            </tooltip>
        </Button>
        <padding>
            <Insets left="10" right="10" />
        </padding>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </HBox>
    <VBox spacing="7.0" styleClass="windowPaddingSmall">
        <Label text="%filter" />
        <HBox spacing="10.0">
            <RadioButton fx:id="rbSelected" text="%selected" />
            <RadioButton fx:id="rbNotSelected" text="%notSelected" />
            <RadioButton fx:id="rbAll" selected="true" text="%all" />
        </HBox>
        <CheckBox fx:id="cbSelectedCoursesOnly" text="%selectedCoursesOnly" />
    </VBox>
    <TableView fx:id="unitsTable" editable="true" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="tableColumnCheckBox" maxWidth="30.0" minWidth="30.0" resizable="false" sortable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="selected" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tableColumnKey" editable="false" resizable="false" text="%columnKey">
                <cellValueFactory>
                    <PropertyValueFactory property="key" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tableColumnTitle" editable="false" resizable="false" text="%columnTitle">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</fx:root>
