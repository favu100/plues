<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.76-ea"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="%search"/>
        <TextField fx:id="query"/>
        <Label text="%filter"/>
        <HBox spacing="10">
            <RadioButton fx:id="selected" text="%selected"/>
            <RadioButton fx:id="notSelected" text="%notSelected"/>
            <RadioButton fx:id="all" text="%all" selected="true"/>
        </HBox>
        <CheckBox fx:id="selectedCoursesOnly" text="%selectedCoursesOnly"/>
        <Button fx:id="clearSelection" text="%clear" onAction="#resetSelection"/>
        <TableView fx:id="units" editable="true">
            <columns>
                <TableColumn fx:id="checkboxColumn" prefWidth="30" sortable="false"
                             resizable="false"/>
                <TableColumn fx:id="abstractUnitKeyColumn" minWidth="120" maxWidth="200"
                             text="%columnKey" editable="false"/>
                <TableColumn fx:id="abstractUnitTitleColumn" minWidth="350"
                             text="%columnTitle" editable="false"/>
            </columns>
        </TableView>
    </children>
</fx:root>
