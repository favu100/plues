<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <HBox spacing="5.0">
        <TextField fx:id="txtQuery" promptText="%searchAbstractUnit" HBox.hgrow="ALWAYS"/>
        <Button fx:id="btClearSelection" onAction="#resetSelection" HBox.hgrow="ALWAYS">
            <tooltip>
                <Tooltip text="%clear"/>
            </tooltip>
        </Button>
    </HBox>
    <VBox styleClass="windowPaddingSmall" spacing="7.0">
        <Label text="%filter"/>
        <HBox spacing="10.0">
            <RadioButton fx:id="rbSelected" text="%selected"/>
            <RadioButton fx:id="rbNotSelected" text="%notSelected"/>
            <RadioButton fx:id="rbAll" text="%all" selected="true"/>
        </HBox>
        <CheckBox fx:id="cbSelectedCoursesOnly" text="%selectedCoursesOnly"/>
    </VBox>
    <TableView fx:id="unitsTable" editable="true" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="tableColumnCheckBox" sortable="false" maxWidth="30.0"
                         minWidth="30.0" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="selected"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tableColumnKey" text="%columnKey" editable="false"
                         resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="key"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tableColumnTitle" text="%columnTitle" editable="false"
                         resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</fx:root>
