<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.control.TreeTableColumn?>

<fx:root type="VBox" spacing="10.0" xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1">
    <Label text="%conflictExplanation" wrapText="true">
        <padding>
            <Insets left="10.0" right="10.0"/>
        </padding>
    </Label>
    <TreeTableView fx:id="conflictTreeTableView" prefHeight="175.0" focusTraversable="false">
        <columns>
            <TreeTableColumn fx:id="treeColumnTitle" text="%columnTitle"/>
            <TreeTableColumn fx:id="treeColumnKey" text="%columnKey"/>
            <TreeTableColumn fx:id="treeColumnSemesters" text="%columnSemesters"/>
        </columns>
        <TreeItem fx:id="conflictTreeRootItem" value="%conflictPaneTitle" expanded="true"/>
    </TreeTableView>
    <Button fx:id="btHighlightAllConflicts" onAction="#highlightConflicts"
            text="%highlightConflicts"/>
</fx:root>
