<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>

<fx:root type="HBox" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1"
         spacing="10.0" alignment="CENTER">
    <Label fx:id="lbControllerTitle" styleClass="h2"/>
    <Label fx:id="lbControllerInfo">
        <tooltip>
            <Tooltip fx:id="controllerInfoTooltip" prefWidth="400.0" wrapText="true"/>
        </tooltip>
    </Label>
</fx:root>
