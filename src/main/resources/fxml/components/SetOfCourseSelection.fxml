<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER_LEFT">
        <Label fx:id="searchSymbol" alignment="CENTER" textAlignment="CENTER" HBox.hgrow="ALWAYS">
         <padding>
            <Insets right="5.0" />
         </padding></Label>
        <TextField fx:id="txtQuery" promptText="%searchCourse" HBox.hgrow="ALWAYS" />
        <Button fx:id="btClearSelection" onAction="#btClearSelectionSubmit" HBox.hgrow="ALWAYS">
            <tooltip>
                <Tooltip text="%clear" />
            </tooltip>
        </Button>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
        </padding>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </HBox>
    <TitledPane fx:id="titledPaneMasterCourse" expanded="false" text="%master">
        <TableView fx:id="tableViewMasterCourse" editable="true" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="tableColumnMasterCheckBox" maxWidth="30.0" minWidth="30.0" resizable="false" sortable="false">
                    <cellValueFactory>
                        <PropertyValueFactory property="selected" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="tableColumnMasterCourseKey" resizable="false" sortable="false" text="%key">
                    <cellValueFactory>
                        <PropertyValueFactory property="key" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="tableColumnMasterCourseTitle" resizable="false" sortable="false" text="%course">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </TitledPane>
    <TitledPane fx:id="titledPaneBachelorCourse" expanded="false" prefWidth="400.0" text="%bachelor">
        <TableView fx:id="tableViewBachelorCourse" editable="true" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="tableColumnBachelorCheckBox" maxWidth="30.0" minWidth="30.0" resizable="false" sortable="false">
                    <cellValueFactory>
                        <PropertyValueFactory property="selected" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="tableColumnBachelorCourseKey" resizable="false" sortable="false" text="%key">
                    <cellValueFactory>
                        <PropertyValueFactory property="key" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="tableColumnBachelorCourseTitle" resizable="false" sortable="false" text="%course">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </TitledPane>
</fx:root>
