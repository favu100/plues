<?xml version="1.0" encoding="UTF-8"?>

<?import de.hhu.stups.plues.ui.components.timetable.TimetableSideBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import de.hhu.stups.plues.ui.components.timetable.SemesterChooser ?>

<fx:root minHeight="600" type="javafx.scene.control.SplitPane" xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1">
    <TimetableSideBar fx:id="timetableSideBar"/>
    <VBox>
        <children>
            <HBox>
                <Label text="%semester"/>

                <SemesterChooser fx:id="semesterToggle">
                    <buttons>
                        <ToggleButton text="1" userData="1" selected="true"/>
                        <ToggleButton text="2" userData="2"/>
                        <ToggleButton text="3" userData="3"/>
                        <ToggleButton text="4" userData="4"/>
                        <ToggleButton text="5" userData="5"/>
                        <ToggleButton text="6" userData="6"/>
                    </buttons>
                </SemesterChooser>
            </HBox>

            <GridPane maxHeight="Infinity" maxWidth="Infinity" fx:id="timeTable">
                <columnConstraints>
                    <ColumnConstraints fillWidth="true" hgrow="NEVER" minWidth="50.0"
                                       prefWidth="50.0"/>
                    <ColumnConstraints fillWidth="true" hgrow="ALWAYS" minWidth="10.0"
                                       prefWidth="150.0"/>
                    <ColumnConstraints fillWidth="true" hgrow="ALWAYS" minWidth="10.0"
                                       prefWidth="150.0"/>
                    <ColumnConstraints fillWidth="true" hgrow="ALWAYS" minWidth="10.0"
                                       prefWidth="150.0"/>
                    <ColumnConstraints fillWidth="true" hgrow="ALWAYS" minWidth="10.0"
                                       prefWidth="150.0"/>
                    <ColumnConstraints fillWidth="true" hgrow="ALWAYS" minWidth="10.0"
                                       prefWidth="150.0"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints vgrow="NEVER" minHeight="20" prefHeight="20"/>
                    <RowConstraints vgrow="ALWAYS" minHeight="20" prefHeight="450"/>
                    <RowConstraints vgrow="ALWAYS" minHeight="20" prefHeight="450"/>
                    <RowConstraints vgrow="ALWAYS" minHeight="20" prefHeight="450"/>
                    <RowConstraints vgrow="ALWAYS" minHeight="20" prefHeight="450"/>
                    <RowConstraints vgrow="ALWAYS" minHeight="20" prefHeight="450"/>
                    <RowConstraints vgrow="ALWAYS" minHeight="20" prefHeight="450"/>
                    <RowConstraints vgrow="ALWAYS" minHeight="20" prefHeight="450"/>
                </rowConstraints>

                <StackPane styleClass="time" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="08:30" styleClass="headerLabel"/>
                </StackPane>
                <StackPane styleClass="time" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Label text="10:30" styleClass="headerLabel"/>
                </StackPane>
                <StackPane styleClass="time" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <Label text="12:30" styleClass="headerLabel"/>
                </StackPane>
                <StackPane styleClass="time" GridPane.columnIndex="0" GridPane.rowIndex="4">
                    <Label text="14:30" styleClass="headerLabel"/>
                </StackPane>
                <StackPane styleClass="time" GridPane.columnIndex="0" GridPane.rowIndex="5">
                    <Label text="16:30" styleClass="headerLabel"/>
                </StackPane>
                <StackPane styleClass="time" GridPane.columnIndex="0" GridPane.rowIndex="6">
                    <Label text="18:30" styleClass="headerLabel"/>
                </StackPane>
                <StackPane styleClass="time" GridPane.columnIndex="0" GridPane.rowIndex="7">
                    <Label text="20:30" styleClass="headerLabel"/>
                </StackPane>

                <StackPane styleClass="day" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <Label GridPane.rowIndex="0" GridPane.columnIndex="1" text="%monday"
                           styleClass="headerLabel"/>
                </StackPane>
                <StackPane styleClass="day" GridPane.rowIndex="0" GridPane.columnIndex="2">
                    <Label GridPane.rowIndex="0" GridPane.columnIndex="2" text="%tuesday"
                           styleClass="headerLabel"/>
                </StackPane>
                <StackPane styleClass="day" GridPane.rowIndex="0" GridPane.columnIndex="3">
                    <Label GridPane.rowIndex="0" GridPane.columnIndex="3" text="%wednesday"
                           styleClass="headerLabel"/>
                </StackPane>
                <StackPane styleClass="day" GridPane.rowIndex="0" GridPane.columnIndex="4">
                    <Label GridPane.rowIndex="0" GridPane.columnIndex="4" text="%thursday"
                           styleClass="headerLabel"/>
                </StackPane>
                <StackPane styleClass="day" GridPane.rowIndex="0" GridPane.columnIndex="5">
                    <Label GridPane.rowIndex="0" GridPane.columnIndex="5" text="%friday"
                           styleClass="headerLabel"/>
                </StackPane>
            </GridPane>
        </children>
    </VBox>
</fx:root>
