<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import de.hhu.stups.plues.ui.components.CourseFilter?>
<?import javafx.scene.control.ScrollPane?>
<?import org.controlsfx.control.TaskProgressView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<fx:root prefHeight="600" prefWidth="250.0" type="javafx.scene.layout.BorderPane"
         xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1">
        <left>
            <CourseFilter fx:id="courseFilter"/>
        </left>
        <bottom>
            <HBox prefHeight="20.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
        </bottom>
        <center>
            <VBox>
                <children>
                    <GridPane fx:id="foo" maxHeight="Infinity" maxWidth="Infinity" BorderPane.alignment="CENTER">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                        <BorderPane.margin>
                            <Insets />
                        </BorderPane.margin>
                    </GridPane>

                    <Label text="Selection" />
                    <Label fx:id="selection" />
                    <Button fx:id="checkSelection" text="Check!!!!" onAction="#checkButtonPressed"/>
                    <Label text="Result" />
                    <Label fx:id="result"  />
                </children>
            </VBox>
        </center>
 </fx:root>
