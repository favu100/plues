<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.ColumnConstraints?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1"
         prefWidth="500" prefHeight="500" styleClass="windowPadding" spacing="10.0">
    <Label text="%abstractUnit" styleClass="h1"/>
    <GridPane>
        <Label text="%key" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="key" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="%title" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="title" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
    </GridPane>
    <Label text="%units" styleClass="h2"/>
    <TableView fx:id="tableViewUnits">
        <columns>
            <TableColumn fx:id="tableColumnUnitsKey" text="%columnKey" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="key"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tableColumnUnitsTitle" text="%columnTitle" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Label text="%modules" styleClass="h2"/>
    <TableView fx:id="tableViewModules">
        <columns>
            <TableColumn fx:id="tableColumnModulesPordnr" text="%columnPordnr" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="pordnr"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tableColumnModulesTitle" text="%columnTitle" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tableColumnModulesSemesters" text="%columnSemesters"
                         resizable="false"/>
            <TableColumn fx:id="tableColumnModulesType" text="%cell.type" resizable="false"/>
        </columns>
    </TableView>
</fx:root>
