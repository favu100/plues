<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.76-ea"
         xmlns:fx="http://javafx.com/fxml/1" prefWidth="500" prefHeight="500">
    <Label text="%abstractUnit" styleClass="h1"/>
    <GridPane>
        <Label text="%key" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <padding>
                <Insets right="20"/>
            </padding>
        </Label>
        <Label fx:id="key" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="%title" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="title" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    <Label/>
    <Label text="%units" styleClass="h2"/>
    <TableView fx:id="tableViewUnits">
        <columns>
            <TableColumn text="%columnKey" minWidth="100" maxWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="key"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="%columnTitle">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <Label text="%modules" styleClass="h2"/>
    <TableView fx:id="tableViewModules">
        <columns>
            <TableColumn text="%columnPordnr" minWidth="80" maxWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="pordnr"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="%columnTitle">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="semesters" text="%columnSemesters" minWidth="80" maxWidth="80"/>
            <TableColumn fx:id="type" text="%columnType" minWidth="50" maxWidth="50"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</fx:root>
