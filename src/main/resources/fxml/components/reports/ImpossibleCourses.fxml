<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.SegmentedButton?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.geometry.Insets?>
<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.76-ea"
         xmlns:fx="http://javafx.com/fxml/1">
    <SegmentedButton>
        <padding>
            <Insets left="20" right="20"/>
        </padding>
        <buttons>
            <ToggleButton fx:id="buttonImpossibleCourses" text="%button.MissingData"
                          minWidth="150.0" selected="true"/>
            <ToggleButton fx:id="buttonImpossibleCoursesBecauseOfImpossibleModules" minWidth="150.0"
                          text="%button.ImpossibleModules"/>
            <ToggleButton fx:id="buttonImpossibleCoursesBecauseOfImpossibleModuleCombinations"
                          text="%button.ImpossibleModuleCombinations"
                          minWidth="200.0"/>
        </buttons>
    </SegmentedButton>
    <Label fx:id="explanation" wrapText="true"/>
    <Label text="%courses" style="-fx-font-size: 20px"/>
    <TableView fx:id="tableViewImpossibleCourses">
        <columns>
            <TableColumn fx:id="tableColumnCourseName" text="%columnKey"
                         minWidth="100.0" prefWidth="150.0"/>
            <TableColumn fx:id="tableColumnCourseFullName"
                         text="%columnName" minWidth="100.0" prefWidth="500.0"/>
        </columns>
    </TableView>
</fx:root>
