<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.text.Text?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <VBox styleClass="windowPaddingSmall" spacing="10.0" minWidth="0" maxWidth="Infinity">
        <Text fx:id="txtExplanation" text="%explain.MandatoryModules"/>
    </VBox>
    <TableView fx:id="tableViewCourses" minWidth="0" minHeight="0" maxWidth="Infinity">
        <columns>
            <TableColumn fx:id="tableColumnCourseKey" text="%columnKey" resizable="false"
                         minWidth="0">
                <cellValueFactory>
                    <PropertyValueFactory property="key"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tableColumnCourseName" text="%columnCourse" resizable="false"
                         minWidth="0">
                <cellValueFactory>
                    <PropertyValueFactory property="fullName"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <TableView fx:id="tableViewMandatoryModules" minWidth="0" minHeight="0">
        <columns>
            <TableColumn fx:id="tableColumnModulePordnr" text="%columnPordnr" resizable="false"
                         minWidth="0">
                <cellValueFactory>
                    <PropertyValueFactory property="pordnr"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tableColumnModuleTitle" text="%columnModule" resizable="false"
                         minWidth="0">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="tableColumnElectability" text="%columnElectability"
                         minWidth="0" resizable="false"/>
        </columns>
    </TableView>
</fx:root>
