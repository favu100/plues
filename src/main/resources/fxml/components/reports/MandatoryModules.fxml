<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.text.Text?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <VBox styleClass="windowPaddingSmall" spacing="10.0">
        <Text fx:id="txtExplanation" text="%explain.MandatoryModules"/>
    </VBox>
    <TableView fx:id="tableViewcourses">
        <columns>
            <TableColumn text="%columnKey" minWidth="100.0" prefWidth="150.0">
                <cellValueFactory>
                    <PropertyValueFactory property="key"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="%columnCourse" minWidth="100.0" prefWidth="500.0">
                <cellValueFactory>
                    <PropertyValueFactory property="fullName"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <TableView fx:id="tableViewMandatoryModules">
        <columns>
            <TableColumn text="%columnPordnr" prefWidth="300.0" minWidth="100.0">
                <cellValueFactory>
                    <PropertyValueFactory property="pordnr"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="%columnModule" prefWidth="300.0" minWidth="100.0">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="%columnElectability" fx:id="tableColumnElectability" prefWidth="50.0"
                         minWidth="20.0">
            </TableColumn>
        </columns>
    </TableView>
</fx:root>
