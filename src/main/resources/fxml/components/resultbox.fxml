<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<fx:root prefHeight="100.0" type="GridPane" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <StackPane fx:id="statePane" prefWidth="50" GridPane.rowSpan="2">
         <children>
             <ProgressIndicator fx:id="progressIndicator" />
             <Label fx:id="icon" alignment="CENTER" contentDisplay="CENTER" maxHeight="50.0" maxWidth="50.0" minHeight="50.0" minWidth="50.0" prefHeight="50.0" prefWidth="50.0" />
         </children>
      </StackPane>
        <Label fx:id="major" text="major" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label fx:id="minor" text="minor" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <ButtonBar prefHeight="40.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.rowSpan="2">
            <buttons>
                <Button fx:id="show" disable="true" mnemonicParsing="false" onAction="#showPdf" text="Show" textAlignment="CENTER" />
                <Button fx:id="save" disable="true" mnemonicParsing="false" onAction="#savePdf" text="Save" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <Button fx:id="cancel" disable="true" mnemonicParsing="false" onAction="#interrupt" text="Cancel" textAlignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="3" />
            </buttons>
        </ButtonBar>
    </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints prefWidth="150" minWidth="50" />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</fx:root>
