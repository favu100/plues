<fx:root prefHeight="100.0" type="GridPane" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <StackPane fx:id="statePane" prefWidth="50" GridPane.rowSpan="2">
         <children>
             <ProgressIndicator fx:id="progressIndicator" />
             <Label fx:id="icon" alignment="CENTER" contentDisplay="CENTER" maxHeight="50.0" maxWidth="50.0" minHeight="50.0" minWidth="50.0" prefHeight="50.0" prefWidth="50.0" />
         </children>
      </StackPane>
        <Label fx:id="major" text="major" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label fx:id="minor" text="minor" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <PdfButtonBar fx:id="pdfButtonBar" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.rowSpan="2"/>
    </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints prefWidth="150" minWidth="50" />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</fx:root>
