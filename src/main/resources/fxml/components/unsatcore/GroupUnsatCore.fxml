<?xml version="1.0" encoding="UTF-8"?>

<?import de.hhu.stups.plues.ui.controller.unsatcore.UnsatCoreButtonBar?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<fx:root type="VBox" spacing="10.0" styleClass="windowPadding" xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1">
    <Label text="%groupsPaneExplanation" wrapText="true"/>
    <TableView fx:id="groupsTable">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="groupUnitKeyColumn" maxWidth="-1.0" minWidth="100.0"
                         prefWidth="-1.0" text="%columnKey"/>
            <TableColumn fx:id="groupUnitTitleColumn" maxWidth="1.7976931348623157E308"
                         minWidth="200" prefWidth="-1.0" text="%columnTitle"/>
            <TableColumn fx:id="groupUnitSemestersColumn" maxWidth="-1.0" minWidth="100.0"
                         prefWidth="-1.0" text="%groupUnitSemestersColumn"/>
            <TableColumn fx:id="groupSessionsColumn" maxWidth="-1.0" minWidth="200"
                         prefWidth="-1.0" text="%columnGroup">
                <cellValueFactory>
                    <PropertyValueFactory property="sessions"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="groupAbstractUnits" maxWidth="-1.0" minWidth="200.0"
                         prefWidth="-1.0" text="%groupAbstractUnits"/>
        </columns>
    </TableView>
    <UnsatCoreButtonBar fx:id="unsatCoreButtonBar"/>
</fx:root>
