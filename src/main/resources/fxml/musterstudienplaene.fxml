<fx:root alignment="center" type="javafx.scene.layout.GridPane" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <MajorMinorCourseSelection fx:id="courseSelection" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
        <ProgressBar fx:id="progressGenerate" prefHeight="20" prefWidth="400" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
        <Button fx:id="btGenerate" onAction="#btGeneratePressed" prefHeight="30" prefWidth="200" text="Generate" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button fx:id="btCancel" alignment="CENTER" cancelButton="true" contentDisplay="CENTER" onAction="#btCancelPressed" prefHeight="30" prefWidth="200" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <ScrollPane fx:id="scrollPane" prefHeight="200" prefWidth="400.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
            <VBox fx:id="resultBox" prefHeight="200" prefWidth="400" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
        </ScrollPane>
    </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</fx:root>
