<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="200" prefWidth="400" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <VBox prefHeight="200.0" prefWidth="200.0">
         <children>
            <Label fx:id="major" textAlignment="CENTER" />
            <Label fx:id="minor" textAlignment="CENTER" />
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <Button fx:id="send" contentDisplay="CENTER" mnemonicParsing="false" text="Send" textAlignment="CENTER"/>
            <Button fx:id="download" contentDisplay="CENTER" mnemonicParsing="false" text="Download" textAlignment="CENTER"/>
         </children>
      </VBox>
   </children>
</fx:root>
